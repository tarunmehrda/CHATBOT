# Chatbot API Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=4000
HOST=0.0.0.0
NODE_ENV=production

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000

# Referer URL for OpenRouter API
REFERER_URL=https://yourdomain.com

# Optional: Database URL (if you add database functionality later)
# DATABASE_URL=your_database_connection_string

# Optional: Redis URL (if you add caching later)
# REDIS_URL=your_redis_connection_string

# Optional: Rate limiting configuration
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
